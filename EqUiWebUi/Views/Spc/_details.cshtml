@model EqUiWebUi.Models.ia_Alert
<div class="panel panel-default">
    <div class="panel-heading">
        <h4>Alert id:  @Model.id</h4>
    </div>

    <form action="_addComment" method="post">
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-6">
                    <div class="row">
                        <div class="col-sm-4">
                            @Html.LabelFor(m => m.Type)
                            @Html.TextBoxFor(m => m.Type, new { @class = "form-control" })
                        </div>

                        <div class="col-sm-5">
                            @Html.LabelFor(m => m.Detect_timestamp)
                            @Html.TextBoxFor(m => m.Detect_timestamp, new { @class = "form-control" })
                        </div>
                        <div class="col-sm-3"></div>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="row">
                        <div class=" col-sm-4">
                            @Html.LabelFor(m => m.Accept_user)
                            @Html.TextBoxFor(m => m.Accept_user, new { @class = "form-control" })
                        </div>
                        <div class="col-sm-5">
                            @Html.LabelFor(m => m.Accept_timestamp)
                            @Html.TextBoxFor(m => m.Accept_timestamp, new { @class = "form-control" })
                        </div>
                        <div class="col-sm-3"></div>
                    </div>
                </div>
            </div>

            <p></p>

            <div class="row">
                <div class="col-sm-6">
                    <div class="row">
                        <div class=" col-sm-4">
                            @Html.LabelFor(m => m.Fix_user)
                            @Html.TextBoxFor(m => m.Fix_user, new { @class = "form-control" })
                        </div>
                        <div class="col-sm-5">
                            @Html.LabelFor(m => m.Fix_timestamp)
                            @Html.TextBoxFor(m => m.Fix_timestamp, new { @class = "form-control" })
                        </div>
                        <div class="col-sm-3"></div>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="row">
                        <div class=" col-sm-4">
                            @Html.LabelFor(m => m.Close_user)
                            @Html.TextBoxFor(m => m.Close_user, new { @class = "form-control" })
                        </div>
                        <div class="col-sm-5">
                            @Html.LabelFor(m => m.Close_timestamp)
                            @Html.TextBoxFor(m => m.Close_timestamp, new { @class = "form-control" })
                        </div>
                        <div class="col-sm-3"></div>
                    </div>
                </div>
            </div>

            <p></p>

            <div class="row">
                <div class="col-sm-6">
                    @Html.LabelFor(m => m.User_Comment)
                    <textarea readonly class="form-control" id="Comments" rows="3">@Model.User_Comment</textarea>
                </div>
                <div class="col-sm-4">
                    @Html.Label("Add comment")
                    <textarea class="form-control" id="newComments" rows="2"></textarea>
                    <button type="submit" class="btn-xs btn-primary" id="AddComment">Add</button>
                    <div>
                        <div class="col-sm-2"></div>
                    </div>
                </div>

                <p></p>

            </div>
        </div>

    </form>
</div>

