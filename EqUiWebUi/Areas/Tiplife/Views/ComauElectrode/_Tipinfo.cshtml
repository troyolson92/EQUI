

    <div class="card-header">

        <div class="alert alert-info">
            <h4>
                Tipinfo for location: <strong>@ViewBag.location</strong> tool_nr:  <strong>@ViewBag.tool_nr</strong> (C3G)
                <a class="far fa-window-close fa-2x clickable text-black-50 float-right" data-dismiss="modal"></a>
            </h4>
        </div>
    </div>

    <div class="card-body">

        <div class="card">
            <div class="card-header bg-light">
                <h6 class="card-title">
                    TCPlogfile (SBCU)
                    <a class="far fa-window-restore text-black-50" href="@Url.Action("Tcp_log")" data-toggle="popover" data-placement="bottom" title="Open grid in new page"></a>
                    <span class="float-right text-black-50"><i class="clickable fas fa-chevron-circle-up fa-1"></i></span>
                </h6>
            </div>

            <div class="card-body">
                <div data-name="TCP_LOGGrid" class="mvc-grid"></div>
            </div>

        </div>
    </div>

<!--sctips for Tipinfo-->
    <script type="text/javascript">
        //load TCP_LOGGrid data grid
        $('[data-name= "TCP_LOGGrid"]').html("<i class='fas fa-spinner fa-spin fa-2x'></i>");
        $('[data-name= "TCP_LOGGrid"]').mvcgrid({
            sourceUrl: '@Url.Action("_Tcp_logGrid", new { location = ViewBag.location, tool_id = ViewBag.tool_nr })', // Grid source url string
            requestType: 'get', // Ajax grid request type
            reload: true, // Grid reload indicator
            reloadFailed: function (result) {
                console.log(result);
                $('[data-name= "TCP_LOGGrid"]').html($("#Error", result.responseText).html());
            }
        });

        //enable tooltips
        $('[data-toggle="popover"]').tooltip();

    </script>