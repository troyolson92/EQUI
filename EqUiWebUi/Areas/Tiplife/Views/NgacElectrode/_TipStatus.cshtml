@model IEnumerable<EqUiWebUi.Areas.Tiplife.Models.TipMonitor>

@Html.Grid(Model).Named("NgacTipStatus").Build(columns =>
{
    columns.Add(c => c.Robot).Titled("Robot").Filterable(true);
    columns.Add(c => c.Date_time).Titled("Laatst gefreest").Formatted("{0:dd-MM-yyyy HH:mm}");
    columns.Add(c => c.nDress).Titled("#gefreest");
    columns.Add(c => c.WearRatio).Titled("%WearRatio").Css("d-none d-lg-table-cell");
    columns.Add(c => c.pWear).Titled("%wear").Filterable(true);
    columns.Add(c => c.nRspots).Titled("#R Spots").Css("d-none d-lg-table-cell");
    columns.Add(c => c.nRcars).Titled("#R Stukken").InitialSort(GridSortOrder.Asc).Css("d-none d-lg-table-cell");
    columns.Add(c => c.TipAge_h_).Titled("leeftijd (h)");
    columns.Add(c => c.RobotWear).Titled("Wear(mm)").Css("d-none d-lg-table-cell");
    columns.Add(c => c.Time_DressCycleTime).Titled("Ct (s)").Css("d-none d-lg-table-cell");
    columns.Add(c => c.LocationTree).Filterable(true).Css("d-none"); //used for filtering
    columns.Add(c => c.Tool_Nr).Filterable(true).Css("d-none");
    //RenderStatusIcon
    columns.Add()
                 .Titled("Status")
                 .Encoded(false)
                 .Filterable(false)
                 .Sortable(false)
                 .RenderedAs(c => MyFilters.TipMonitorIcon(c.Status, c.RobotWear));
    //launch sbcu tool
    columns.Add()
                     .Encoded(false)
                     .Filterable(false)
                     .Sortable(false)
                     .RenderedAs(c => MyEquiToolkit.SbcuTool(c.Robot, "1")); //need to add the toolnumber in die model
}).Sortable().Pageable(pager =>
{
    pager.RowsPerPage = 20;
    pager.PageSizes = new Dictionary<Int32, String> { { 0, "All" }, { 20, "20" }, { 40, "40" }, { 80, "80" }, { 100, "100" } };
    pager.ShowPageSizes = true;

}).Empty("No data found").Css("table-hover").RowCss(row => MyRowStyling.getRowStyleByWearValue(row.pWear, row.nDress, row.nRcars, row.Status))

