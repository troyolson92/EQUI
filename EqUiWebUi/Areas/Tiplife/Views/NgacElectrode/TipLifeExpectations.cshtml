@*set title*@
@{
    ViewBag.Title = "TipLifeExpectations";
}

<div class="card">
    <div class="card-header bg-dark text-white">
        <h4>TipLifeExpectations</h4>
    </div>

    <div class="card-body">
          <div id="TipLifeExpectationsGrid" class="mvc-grid"></div>
    </div>

</div>

@section scripts{
    <script type="text/javascript">
        //full with screen
        $("#allcontent").removeClass("body-content");
        $("#allcontent").removeClass("container");
        $('#TipLifeExpectationsGrid').html("<i class='fas fa-spinner fa-spin fa-2x'></i>");
        $('#TipLifeExpectationsGrid').mvcgrid({
            sourceUrl: '@Url.Action("_TipLifeExpectationsGrid")', // Grid source url string
            requestType: 'get', // Ajax grid request type
            reload: true, // Grid reload indicator
            reloadFailed: function (result) {
                console.log(result);
                $('[data-name= "TipLifeExpectationsGrid"]').html($("#Error", result.responseText).html());
            },
            reloadEnded: function () {
                EnableInterfaceEvents();
            }
        });
    </script>
}