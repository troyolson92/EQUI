@model IQueryable<EqUiWebUi.Areas.VASC.Models.rt_alarm>
@Html.Grid(Model).Named("rt_alarmGrid").Build(columns =>
{
    columns.Add(c => c.id).Titled("id").InitialSort(GridSortOrder.Desc).Css("tablesaw-priority-0");
    columns.Add(c => c.controller_id).Titled("controller_id").Css("tablesaw-priority-0");
    columns.Add(c => c.c_controller.controller_name).Titled("controller_name").Css("tablesaw-priority-0");
    columns.Add(c => c.error_timestamp).Titled("error_timestamp").Formatted("{0:dd-MM-yyyy HH:mm:ss}");

    columns.Add(c => c.sequenceNumber).Titled("sequenceNumber").Css("tablesaw-priority-0");
    columns.Add(c => c.number).Titled("Number");
    columns.Add(c => c.categoryId).Titled("CategoryId").Css("tablesaw-priority-0");
    columns.Add(c => c.title).Titled("Title");

    columns.Add(c => c.description).Titled("Description");
    columns.Add(c => c.consequences).Titled("consequences").Css("tablesaw-priority-0");
    columns.Add(c => c.causes).Titled("causes").Css("tablesaw-priority-0");
    columns.Add(c => c.actions).Titled("actions").Css("tablesaw-priority-0");
    columns.Add(c => c.type).Titled("type").Css("tablesaw-priority-0");

}).Filterable().Sortable().Pageable(pager =>
{
    pager.RowsPerPage = 20;
    pager.PageSizes = new Dictionary<Int32, String> { { 0, "All" }, { 20, "20" }, { 40, "40" }, { 80, "80" }, { 100, "100" } };
    pager.ShowPageSizes = true;
}).Empty("Did not find anything").Css("table-hover  tablesaw-on")