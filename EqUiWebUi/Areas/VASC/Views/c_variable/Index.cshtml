@model IEnumerable<EqUiWebUi.Areas.VASC.Models.c_variable>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Index c_variable</h2>
    <div class="alert alert-info">
        <h4>
            The list of variables to be monitored.
        </h4>

        <div class="text-muted">
            The difference between c_variable and c_variable_search is that this table can look for a variable that meets the requirement
            See VASC manual for more details (2.5)
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("ADD new variable to log", "Edit", new { id = -1 })
</p>


@Html.AjaxGrid(Url.Action("_List"))

<hr />
    <div class="alert alert-danger">
        <input id="CleanRt_value" class="btn btn-warning JQresultTriggerBtn" type="button" value="CLEAN RT_VALUE" href="@Url.Action("CleanUpRt_value")" />
        <strong>Clean all data from rt_value table that is no longer in setup table.</strong>
    </div>
@section scripts{
    <script>
        //full with screen
        $("#allcontent").removeClass("body-content");
        $("#allcontent").removeClass("container");
    </script>
}
