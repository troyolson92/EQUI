@model EqUiWebUi.Areas.VASC.Models.c_variable

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>c_variable</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
