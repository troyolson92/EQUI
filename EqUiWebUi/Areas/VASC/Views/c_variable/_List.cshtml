@model List<EqUiWebUi.Areas.VASC.Models.c_variable>

@Html.Grid(Model).Named("c_variable").Build(columns =>
{
    columns.Add(c => c.id).Titled("id").InitialSort(GridSortOrder.Asc);
    columns.Add(c => c._Enable_bit).Titled("enable_bit");
    columns.Add(c => c.variable).Titled("variable");
    columns.Add(c => c._Poll_Rate).Titled("_Poll_Rate");
    columns.Add(c => c._Event_code).Titled("_Event_code");
    columns.Add(c => c.sql_action).Titled("_SQL_Action"); //this should be multiselect!
    columns.Add(c => c.rt_table).Titled("rt_table");
    columns.Add(c => c)
                    .Titled("")
                    .Encoded(false)
                    .RenderedAs(c => @Html.ActionLink("Edit", "Edit", new { id = c.id })
                    ).Filterable(false);
}).Filterable(true).Sortable(true).Empty("Did not find anything").Css("table-hover")
