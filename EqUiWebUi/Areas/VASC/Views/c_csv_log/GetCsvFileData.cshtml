@model IQueryable<EqUiWebUi.Areas.VASC.Models.rt_csv_file>
@{
    ViewBag.Title = "GetCsvFileData";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetCsvFileData</h2>

@Html.Grid(Model).Named("rt_csv_file").Build(columns =>
{
    columns.Add(c => c.id).Titled("id").InitialSort(GridSortOrder.Desc);
    columns.Add(c => c.c_controller.controller_name).Titled("controller_name");
    columns.Add(c => c.c_csv_log.csv_filename).Titled("csv_filename");
    columns.Add(c => c.C_timestamp).Titled("_timestamp");
    columns.Add(c => c.lastDateRecord).Titled("lastDateRecord");
    columns.Add(c => c.lastLineRead).Titled("lastLineRead");
    columns.Add(c => c.lastFileSize).Titled("lastFileSize");
}).Filterable().Sortable().Pageable(pager =>
{
    pager.RowsPerPage = 20;
    pager.PageSizes = new Dictionary<Int32, String> { { 0, "All" }, { 10, "10" }, { 20, "20" }, { 40, "40" }, { 80, "80" }, { 100, "100" } };
    pager.ShowPageSizes = true;
}).Empty("Did not find anything").Css("table-hover")

@section scripts{
    <script>
        //full with screen
        $("#allcontent").removeClass("body-content");
        $("#allcontent").removeClass("container");
    </script>
}
