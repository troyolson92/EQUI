

<div class="card">
    <div class="card-header">
        <h5 class="card-title text-white">l operation</h5>
        <div class="text-muted">
            (log records in table l_operation for this session)
            @Html.ActionLink("l_operation_index", "Index", "l_operation")
        </div>
        <span class="clickable float-right"><i class="fas fa-chevron-circle-up fa-1"></i></span>
    </div>
    <div class="alert-info">
    </div>
    <div class="card-body">
        <div id="l_operationGridContainer" class="mvc-grid"></div>
    </div>
