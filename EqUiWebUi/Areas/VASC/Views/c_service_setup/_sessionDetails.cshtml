<script>
    $('#l_operationGridContainer').mvcgrid({
        sourceUrl: '@Html.Raw(@Url.Action("_List", "l_operation"))',
        requestType: 'get', // Ajax grid request type
        reloadFailed: function (result) {
            $("#l_operationGridContainer").html("Error while loading!!!");
        }
    });
</script>