@model IEnumerable<EqUiWebUi.Areas.VASC.Models.c_service_setup>

@Html.Grid(Model).Named("c_service_setup").Build(columns =>
{
    columns.Add(c => c.id).Titled("id").InitialSort(GridSortOrder.Asc);
    columns.Add(c => c._Enable_bit).Titled("Enable_bit"); //this is like enable bit
    columns.Add(c => c.name).Titled("name");
    columns.Add(c => c.value).Titled("value");
    columns.Add(c => c.description).Titled("description");
    columns.Add(c => c)
                    .Titled("Tools")
                    .Encoded(false)
                    .RenderedAs(c => MyHtmlHelpers.IconActionLink(Url.Action("Edit", new { id = c.id }), "fas fa-pencil-alt", "", "Edit", OpenNewWindow:true)
                    ).Filterable(false);
}).Filterable().Sortable().Pageable(pager =>
{
    pager.RowsPerPage = 10;
    pager.PageSizes = new Dictionary<Int32, String> { { 0, "All" }, { 10, "10" }, { 20, "20" }, { 40, "40" }, { 80, "80" }, { 100, "100" } };
    pager.ShowPageSizes = true;
}).Empty("Did not find anything").Css("table-hover")


