@model IGrid<EqUiWebUi.Areas.VASC.Models.rt_job_breakdown>

<div class="mvc-grid">
    <table>
        <thead>
            <tr>
                @foreach (IGridColumn column in Model.Columns)
                {
                    <th>
                        <span class="mvc-grid-header-title">@column.Title</span>
                    </th>
                }
            </tr>
        </thead>
        <tbody>
            @if (Model.Rows.Any())
            {
                foreach (IGridRow<EqUiWebUi.Areas.VASC.Models.rt_job_breakdown> row in Model.Rows)
                {
                    <tr class="@row.CssClasses">
                        @foreach (IGridColumn column in Model.Columns)
                        {
                            <td class="@column.CssClasses">@column.ValueFor(row)</td>
                        }
                    </tr>

                    if (row.Model.h_alarm_id != 0) //why do we sometimes have 0 in the tabels? ask GM
                    {
                        <tr>
                            <td colspan="@Model.Columns.Count()">
                                   @*Partial stuff here*@
                                <div class="modal-content">
                                    <div class="modal-body">
                                        <p>ID:@row.Model.h_alarm_id</p>
                                        <p>Phase1:@row.Model.phase1</p>
                                        <p>Logtext: @row.Model.ControllerEventLog.Logtext</p>
                                        <p>FullLogtext: @row.Model.ControllerEventLog.FullLogtext</p>
                                    </div>
                                 </div>
                            </td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td colspan="@Model.Columns.Count()">
                                <div>no halarm</div>
                            </td>
                        </tr>

                    }
                }
            }
            else
            {
                <tr class="mvc-grid-empty-row">
                    <td colspan="@Model.Columns.Count()">
                        @Model.EmptyText
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
