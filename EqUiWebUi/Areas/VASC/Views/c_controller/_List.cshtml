@model IQueryable<EqUiWebUi.Areas.VASC.Models.c_controller>

@Html.Grid(Model).Named("c_controllerGrid").Build(columns =>
{
    columns.Add(c => c.id).Titled("id").InitialSort(GridSortOrder.Asc);
    columns.Add(c => c._Enable_bit).Titled("enable_bit");
    columns.Add(c => c.enable_bit).Titled("eb");
    columns.Add(c => c.controller_name).Titled("controller_name");
    columns.Add(c => c.systemId).Titled("systemId").Css("tablesaw-priority-6");
    columns.Add(c => c.ip).Titled("ip").Css("tablesaw-priority-6");
    columns.Add(c => c._ControllerFlags).Titled("flags");
    columns.Add(c => c)
                    .Titled("Tools")
                    .Encoded(false)
                    .RenderedAs(c => MyHtmlHelpers.IconActionLink(Url.Action("Edit", new { id = c.id }), "fas fa-pencil-alt", "", "Edit", OpenNewWindow: true).ToHtmlString() +
                     MyHtmlHelpers.IconActionLink(Url.Action("index","c_controller_class", new { controller_id = c.id }), "fas fa-file", "", "c_controller_class").ToHtmlString() +
                     MyHtmlHelpers.IconActionLink(Url.Action("GetJobs", "Breakdown", new { controller_id = c.id }), "fas fa-vial", "", "get jobs", OpenNewWindow: true).ToHtmlString() +
                     MyHtmlHelpers.IconActionLink(Url.Action("GetJobs", "Breakdown", new { controller_id = c.id, hasBreakdowns = true }), "fas fa-vial text-warning", "", "get breakdowns", OpenNewWindow: true).ToHtmlString()
                    ).Filterable(false);
}).Filterable().Sortable().Pageable(pager =>
{
    pager.RowsPerPage = 10;
    pager.PageSizes = new Dictionary<Int32, String> { { 0, "All" }, { 10, "10" }, { 20, "20" }, { 40, "40" }, { 80, "80" }, { 100, "100" } };
    pager.ShowPageSizes = true;
}).Empty("Did not find anything").Css("table-hover tablesaw-on")


