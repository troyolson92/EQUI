
@model EqUiWebUi.Areas.VWSC.Models.VWSC_c_timer_class

<div class="card">
    <div class="card-header bg-light">
        <h5 class="card-title text-black-50">
            c timers in this class
            @if (ViewBag.timer_id != null)
            {
            <strong>Filtered on timer_id: @ViewBag.timer_id</strong>
            }
            <span class="clickable float-right"><i class="fas fa-chevron-circle-up fa-1"></i></span>
        </h5>
    </div>
    <div class="card-body">
        <div data-name="c_timer" class="mvc-grid"></div>
    </div>
</div>

<hr />

<div class="card">
    <div class="card-header bg-light">
        <h5 class="card-title text-black-50">
            c variable
        </h5>
        <div class="text-muted">
            (Rapid variables or IO signals handeld *logged to a table or used as event)
            @Html.ActionLink("c_variable index", "Index", "c_variable")
        </div>
        <span class="clickable float-right"><i class="fas fa-chevron-circle-up fa-1"></i></span>

    </div>
    <div class="card-body">
        <div id="c_variableGrid" class="mvc-grid"></div>
    </div>
</div>

<hr />


<script>
    //load girds
    $('[data-name="c_timer"]').html("<i class='fas fa-spinner fa-spin fa-2x'></i>");
    $('[data-name="c_timer"]').mvcgrid({
                sourceUrl: '@Html.Raw(@Url.Action("_List", "c_timer", new { timerclass = Model.id, timer_id = ViewBag.timer_id }))',
        requestType: 'get', // Ajax grid request type
        reloadFailed: function (result) {
            $('[data-name="c_timer"]').html("Error while loading!!!");
                }
            });


</script>
