@model IQueryable<EqUiWebUi.Areas.VWSC.Models.VWSC_rt_weldfault>

@Html.Grid(Model).Named("weldFaultGrid").Build(columns =>
{
    columns.Add(c => c.id).Titled("id").InitialSort(GridSortOrder.Desc);
    columns.Add(c => c.C_timestamp).Titled("timestamp");
    columns.Add(c => c.progNo).Titled("progNo");
    columns.Add(c => c.spotId).Titled("spotId");
    columns.Add(c => c.monitorState_txt).Titled("monitorState_txt");
    columns.Add(c => c.regulationState_txt).Titled("regulationState_txt");

}).Filterable().Sortable().Pageable(pager =>
{
    pager.RowsPerPage = 20;
    pager.PageSizes = new Dictionary<Int32, String> { { 0, "All" }, { 20, "20" }, { 40, "40" }, { 80, "80" }, { 100, "100" } };
    pager.ShowPageSizes = true;
}).Empty("Did not find anything").Css("table-hover")