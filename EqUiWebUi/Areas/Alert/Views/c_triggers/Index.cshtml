@model IEnumerable<EqUiWebUi.Areas.Alert.Models.c_triggers>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index of all alerts triggers</h2>

<p>
    @Html.ActionLink("Create New trigger", "Edit", new { id = -1 })
</p>


@Html.Grid(Model).Named("c_triggers").Build(columns =>
{
    columns.Add(c => c.id).Titled("ID").InitialSort(GridSortOrder.Asc).Css("d-none d-lg-table-cell");
    columns.Add(c => c.alertGroup).Titled("alertGroup");
    columns.Add(c => c.alertType).Titled("alertType");
    columns.Add(c => c.enabled).Titled("enabled");
    columns.Add(c => c.discription).Titled("discription");
    columns.Add(c => c.c_schedule.name).Titled("schedule");
    columns.Add(c => c.ordinal).Titled("ordinal");
    columns.Add(c => c.enableSMS).Titled("enableSMS");
    columns.Add(c => c.c_smsSystem.system).Titled("SMSsystem");
  //  columns.Add(c => c.smsOnRetrigger).Titled("smsOnRetrigger").Css("d-none d-lg-table-cell");
    columns.Add(c => c.id)
                .Titled("")
                .Encoded(false)
                .RenderedAs(c => MyFilters.IconActionLink(Url.Action("Edit", new { id = c.id }), "fas fa-pencil-alt", "", "Edit this trigger").ToHtmlString() +
                                 MyFilters.IconActionLink(Url.Action("Index", "h_alert", new { c_trigger_id = c.id }), "fas fa-eye", "", "Show h_alert").ToHtmlString() +
                                 MyFilters.IconActionLink(Url.Action("Delete", new { id = c.id }), "fas fa-trash-alt", "", "Delete").ToHtmlString() +
                                 MyFilters.IconActionLink(Url.Action("RunAlertTrigger", new { triggerID = c.id }), "fas fa-fire", "", "Test fire",classes: "JQresultTriggerBtn").ToHtmlString()
                ).Filterable(false);
}).Filterable().Sortable().Empty("Did not find anything").Css("table-hover")

@section scripts{
    <script>
        //full with screen
        $("#allcontent").removeClass("body-content");
        $("#allcontent").removeClass("container");
    </script>
}
