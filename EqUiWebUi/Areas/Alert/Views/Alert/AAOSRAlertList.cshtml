@model IEnumerable<EqUiWebUi.Areas.Alert.Models.h_alert>

@{
    ViewBag.Title = "AAOSRAlertList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index of all alerts for this user (AAOSR)</h2>

@Html.Grid(Model).Named("h_alert").Build(columns =>
{
    columns.Add(c => c.id).Titled("id").Filterable(true);
    columns.Add(c => c.location).Titled("location").Filterable(true);
    columns.Add(c => c.C_timestamp).Titled("C_timestamp").Formatted("{0:dd-MM-yyyy HH:mm}").InitialSort(GridSortOrder.Desc);
    columns.Add(c => c.c_triggers.alertType).Titled("alertType").Filterable(true);
    columns.Add(c => c.info).Titled("info");
    columns.Add(c => c.AcceptUser.username.Replace(@"VCCNET\", "")).Titled("AcceptUser").Filterable(true);
    //render dropdown to set alert status
    columns.Add(c => c.c_state.state)
           .Titled("State")
           .Encoded(false)
           .Filterable(true)
           .RenderedAs(c => @MyFilters.ChangeAlertStatus(c.id, c.c_state.state));
    //add edit button
    columns.Add(c => c)
                .Titled("")
                .Encoded(false)
                .RenderedAs(c => @Html.ActionLink("Edit", "Edit", new { id = c.id })
                ).Filterable(false);
}).Filterable(true).Sortable(true).Pageable(pager =>
{
    pager.RowsPerPage = 7;
}).Empty("Did not find anything").Css("table-hover").RowCss(row => MyRowStyling.getRowStyleStatus(row.c_state.state))

<p></p>
@*info model in page for alert details *@
<div class="panel panel-default">
    <div class="panel-body">
        <div id="alertDetailsPartial">Click on a row for more details about the alert</div>
    </div>
</div>

@section scripts{

    <script type="text/javascript">
    $(document).ready(function () {
        //subscribe to row clicked events
        $('.mvc-grid').mvcgrid({
            rowClicked: function (row, data, e) {
                console.log(data);
                $("#alertDetailsPartial").html("Loading.....");
                var url = "@Url.Action("_Details")?id=" + data.id;
                $("#alertDetailsPartial").load(url);
            }
        });
    });
    </script>

}

