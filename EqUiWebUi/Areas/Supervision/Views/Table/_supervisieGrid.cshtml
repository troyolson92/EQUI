@model List<EqUiWebUi.Areas.Supervision.SupervisieDummy>

@Html.Grid(Model).Named("SupervisieGrid").Build(columns =>
{
    columns.Add(c => c.Location).Titled("Location").Filterable(true);
    columns.Add(c => c.logtext).Titled("Logtext").Filterable(true);
    columns.Add(c => c.RT / 60).Titled("RT").Filterable(true);
    columns.Add(c => c.DT / 60).Titled("DT").Filterable(true);
    columns.Add(c => c.timestamp).Formatted("{0:dd MMM HH:mm:ss}").Titled("Time").Css("d-none d-md-table-cell");
    columns.Add(c => c.Classification).Titled("Class").Css("d-none d-lg-table-cell");
    columns.Add(c => c.Subgroup).Titled("Subgroup").Css("d-none d-lg-table-cell");
    columns.Add(c => c.Logtype).Titled("LogType").Css("d-none d-lg-table-cell").Filterable(true);
    columns.Add(c => c.LocationTree).Filterable(true).Css("d-none");
    columns.Add(c => c.Logcode).Css("d-none");
    columns.Add(c => c.refId).Css("d-none");
}).Sortable().Pageable(pager =>
{
    pager.RowsPerPage = 20;
    pager.PageSizes = new Dictionary<Int32, String> { { 0, "All" }, { 20, "20" }, { 40, "40" }, { 80, "80" }, { 100, "100" } };
    pager.ShowPageSizes = true;
}).Empty("No data found").Css("table-hover").RowCss(row => EqUiWebUi.Areas.Supervision.SupervisionHelpers.getRowStyleLogtype(row.animation))