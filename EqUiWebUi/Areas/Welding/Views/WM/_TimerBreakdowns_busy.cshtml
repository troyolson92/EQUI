@model IQueryable<EqUiWebUi.Areas.Welding.Models.TimerBreakdowns_busy>

@Html.Grid(Model).Named("TimerBreakdowns_busy").Build(columns =>
{
    columns.Add(c => c.NPT).Titled("NPT").Css("colorred");
    columns.Add(c => c.TimerName).Titled("TimerName").Css("colorred");
    columns.Add(c => c.Fault).Titled("Fault").Css("colorred");
    columns.Add(c => c.C_timestamp).Titled("BreakDownStart").Formatted("{0:dd-MM-yyyy HH:mm:ss}").Css("colorred"); 
    columns.Add(c => c.BreakdownTime).Titled("BreakdownTime(in min)").Css("colorred");



}
).Sortable().Empty("No data found").Css(".ani_ PulseRedRepeat")

<style>
    .ani_ PulseRedRepeat {
        background-color: #f21a1a;
        -webkit-animation: PulseBlue 3s infinite;
    }


    .colorred {
        background-color: rgba(190, 48, 48, 0.39)
        ;font-weight: bolder;
    }
</style>
