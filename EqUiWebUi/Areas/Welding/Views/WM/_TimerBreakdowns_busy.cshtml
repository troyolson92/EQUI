@model IQueryable<EqUiWebUi.Areas.Welding.Models.TimerBreakdowns_busy>

@Html.Grid(Model).Named("TimerBreakdowns_busy").Build(columns =>
{
    columns.Add(c => c.NPT).Titled("NPT").Css("ani_ PulseRedRepeat");
    columns.Add(c => c.TimerName).Titled("TimerName").Css("ani_ PulseRedRepeat");
    columns.Add(c => c.Fault).Titled("program").Css("ani_ PulseRedRepeat");
    columns.Add(c => c.C_timestamp).Titled("BreakDownStart").Formatted("{0:dd-MM-yyyy HH:mm:ss}").Css("ani_ PulseRedRepeat"); 
    columns.Add(c => c.BreakdownTime).Titled("BreakdownTime(in min)").Css("ani_ PulseRedRepeat");


}
).Sortable().Empty("No data found")

<style>
    .ani_ PulseRedRepeat {
        background-color: #f21a1a;
        -webkit-animation: PulseBlue 3s infinite;
    }
</style>
