@model IQueryable<EqUiWebUi.Areas.Welding.Models.ConnectionState>

@Html.Grid(Model).Named("ConnectionState").Build(columns =>
{
    columns.Add(c => c.NoConnection).Titled("NoConnection").Css("color");
    columns.Add(c => c.TimerName).Titled("TimerName").Css("color"); ;
    columns.Add(c => c.C_timestamp).Titled("Datetime").Formatted("{0:dd-MM-yyyy HH:mm:ss}").Css("color"); ;
    columns.Add(c => c.onlineInBos6000).Titled("OnlineInBos6000").Css("color"); ;

}
).Sortable().Empty("No data found")

<style>
    .color {
        background-color: #ff0000;
        font-weight: bolder;
    }
</style>

