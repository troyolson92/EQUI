@model IQueryable<EqUiWebUi.Areas.Welding.Models.ConnectionState>

@Html.Grid(Model).Named("ConnectionState").Build(columns =>
{
    columns.Add(c => c.NoConnection).Titled("NoConnection");
    columns.Add(c => c.TimerName).Titled("TimerName");
    columns.Add(c => c.C_timestamp).Titled("Datetime").Formatted("{0:dd-MM-yyyy HH:mm:ss}");
    columns.Add(c => c.onlineInBos6000).Titled("OnlineInBos6000");

}
).Sortable().Css("css-classes").AppendCss("table-hover").Empty("No data found").Css("tableStyle")

<style>
    .table-hover tbody tr:hover {
        background-color: rgba(243, 15, 15, 0.28);
    }

    .tableStyle {
        color: #ff0000
    }
</style>

