@model IQueryable<EqUiWebUi.Areas.Welding.Models.QISViewer>

@Html.Grid(Model).Named("QISViewer").Build(columns =>
{
    columns.Add(c => c.Timestamp).Titled("Timestamp").Formatted("{0:dd-MM-yyyy HH:mm:ss}");
    columns.Add(c => c.TimerName).Titled("TimerName");
    columns.Add(c => c.parameter).Titled("Parameter");
    columns.Add(c => c.program).Titled("program");
    columns.Add(c => c.bos6000Value).Titled("bos6000Value");
    columns.Add(c => c.RequiredValue).Titled("RequiredValue");
    columns.Add(c => c.remark).Titled("Remark");

}
).Sortable().Css("css-classes").AppendCss("table-hover").Empty("No data found").Css("tableStyle")

<style>
    .table-hover tbody tr:hover {
        background-color: rgba(243, 15, 15, 0.28);
    }
    .tableStyle {
        color: #ff0000
        
    }
</style>