@model IQueryable<EqUiWebUi.Areas.Welding.Models.QISViewer>

@Html.Grid(Model).Named("QISViewer").Build(columns =>
{
    columns.Add(c => c.Timestamp).Titled("Timestamp").Formatted("{0:dd-MM-yyyy HH:mm:ss}").Css("ani_ PulseRedRepeat");
    columns.Add(c => c.TimerName).Titled("TimerName").Css("ani_ PulseRedRepeat");
    columns.Add(c => c.parameter).Titled("Parameter").Css("ani_ PulseRedRepeat");
    columns.Add(c => c.program).Titled("program").Css("ani_ PulseRedRepeat");
    columns.Add(c => c.bos6000Value).Titled("bos6000Value").Css("ani_ PulseRedRepeat");
    columns.Add(c => c.RequiredValue).Titled("RequiredValue").Css("ani_ PulseRedRepeat");
    columns.Add(c => c.remark).Titled("Remark").Css("ani_ PulseRedRepeat");

}
).Sortable().Empty("No data found")

<style>
    .ani_ PulseRedRepeat {
        background-color: #f21a1a;
        -webkit-animation: PulseBlue 3s infinite;
    }
</style>