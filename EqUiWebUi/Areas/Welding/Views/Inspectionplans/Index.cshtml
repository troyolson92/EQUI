@model IEnumerable<EqUiWebUi.Areas.Welding.Models.Inspectionplan>


@{
    ViewBag.Title = "Index";

}

<h2>Configuatie UL plans</h2>

@Html.Grid(Model).Named("Inspectionplan").Build(columns =>
{
    columns.Add(c => c.ID).Titled("id").Css("bolded");
    columns.Add(c => c.Name).Titled("inspectionplan").Css("bolded").InitialSort(GridSortOrder.Desc); ;
    columns.Add(c => c.PlanActive).Titled("planactive");
    columns.Add(c => c.SpotIdent).Titled("spotIdent");
    columns.Add(c => c.SpotBefore).Titled("spoBefore");
    columns.Add(c => c.SpotAfter).Titled("spotAfter");
    columns.Add(c => c.WorkLocation).Titled("Worklocation");
    columns.Add(c => c.WorkGroup).Titled("WorkGroup");
    //tools
    columns.Add(c => c)
                        .Titled("")
                        .Encoded(false)
                        .RenderedAs(c =>

                        MyHtmlHelpers.IconActionLink(Url.Action("Edit", new { id = c.ID }), "fas fa-pencil-alt", "", "Edit this spot").ToHtmlString()
                        
                        ).Filterable(false);



}).Filterable().Pageable(pager =>
{
    pager.RowsPerPage = 20;

}
        ).Sortable().Css("table-hover")

@section scripts{
    <script>
        //full with screen
        $("#allcontent").removeClass("body-content");
        $("#allcontent").removeClass("container");
    </script>
}
