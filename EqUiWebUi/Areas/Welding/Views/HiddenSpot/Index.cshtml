@model IEnumerable<EqUiWebUi.Areas.Welding.Models.rt_spottable>

@{
    ViewBag.Title = "Index";


}

<h2>Configure the spotlist from database</h2>

@Html.Grid(Model).Named("rt_spottable").Build(columns =>
{
    columns.Add(c => c.ID).Titled("id").Css("bolded");
    columns.Add(c => c.c_timer.Name).Titled("TimerName").Css("bolded").InitialSort(GridSortOrder.Desc); ;
    columns.Add(c => c.SpotName).Titled("spotname");
    columns.Add(c => c.SpotLeft).Titled("spotleft");
    columns.Add(c => c.SpotRight).Titled("spotright");
    columns.Add(c => c.HiddenSpot).Titled("hiddenspot");
    columns.Add(c => c.GeoSpot).Titled("Geospot");
    //tools
    columns.Add(c => c)
                        .Titled("")
                        .Encoded(false)
                        .RenderedAs(c =>

                        MyHtmlHelpers.IconActionLink(Url.Action("Edit", new { id = c.ID }), "fas fa-pencil-alt", "", "Edit this spot").ToHtmlString()

                        ).Filterable(false);



}).Filterable().Pageable(pager =>
{
    pager.RowsPerPage = 20;

}
        ).Sortable().Css("table-hover")

@section scripts{
    <script>
            //full with screen
            $("#allcontent").removeClass("body-content");
            $("#allcontent").removeClass("container");
    </script>
}


