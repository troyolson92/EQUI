@model EqUiWebUi.Models.LogInfo

<div class="modal-header">

    <div class="alert">
        <h4>Information about <a class="far fa-window-restore text-black-50" href='@Url.Action("MoreInfo","Table",Model)'></a></h4>
        <div class="row">
           
            <div class="col-sm-11">
                Logtype: <strong>@Model.logtype</strong> for location: <strong>@Model.location</strong>
                <div class="text-muted">
                    Logcode: <strong>@Model.errornum</strong> Logtext: <strong>@Model.logtext.Trim()</strong> 
                </div>

            </div>

            <div class="col-sm-1">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

            </div>

        </div>
    </div>
</div>

<div class="modal-body">
    @Html.Partial("../Chart/_getErrorTrend", Model)

    @*if the logtype is an alert it is redirected to the alert area.
        all other logtypes are run via equi.GetErrorInfoData*@
    @if (Model.logtype == "ALERT")
    {
        <div class="card">
            <div class="card-header bg-warning">
                <h6 class="card-title">
                    Details for Alert: <strong>@Model.refid</strong> Info: <strong>@Model.logtext.Trim()</strong>
                    @MyFilters.IconActionLink(Url.Action("Edit", "Alert", new { area = "Alert", id = Model.refid }), "far fa-edit text-black-50", "", "Edit this alert")
                    <span class="clickable float-right"><i class="fas fa-chevron-circle-up fa-1 text-black-50"></i></span>
                </h6>
            </div>
            <div class="card-body">
                @Html.Action("_Details", "Alert", new { area = "Alert", id = Model.refid })
            </div>
        </div>
    }
    else
    {
        @Html.Action("_loginfo", Model)
    }

    @Html.Action("_workordersOnLocation", "Workorder", new { area = "Maximo_ui", location = Model.location })

</div>

<div class="modal-footer">
    @if (Model.logtype == "BREAKDOWN")
    {
        @Html.ActionLink("JobDetails", "rtJob", "Breakdown", new { area = "VASC", jobID = Model.refid }, new { @class = "btn btn-primary btn-sm" })
    }
</div>
