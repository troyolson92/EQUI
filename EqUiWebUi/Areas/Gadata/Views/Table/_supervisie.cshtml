@model IEnumerable<EqUiWebUi.Areas.Gadata.SupervisieDummy>

@Html.Grid(Model).Named("Supervisie").Build(columns =>
{
    columns.Add(c => c.Location).Titled("Location").Filterable(true);
    columns.Add(c => c.logtext).Titled("Logtext");
    columns.Add(c => c.RT).Titled("RT");
    columns.Add(c => c.DT).Titled("DT");
    columns.Add(c => c.time).Titled("time");
    columns.Add(c => c.Classification).Titled("Class").Css("d-none d-lg-table-cell");
    columns.Add(c => c.Subgroup).Titled("Subgroup").Css("d-none d-lg-table-cell");
    columns.Add(c => c.Logtype).Titled("LogType").Css("d-none d-lg-table-cell").Filterable(true);
    columns.Add(c => c.LocationTree).Filterable(true).Css("d-none");
    columns.Add(c => c.Logcode).Css("d-none");
    columns.Add(c => c.refId).Css("d-none");
}).Sortable().Pageable(pager =>
{
    pager.RowsPerPage = 20;
}).Empty("No data found").Css("table-hover").RowCss(row => MyRowStyling.getRowStyleLogtype(row.Logtype))
