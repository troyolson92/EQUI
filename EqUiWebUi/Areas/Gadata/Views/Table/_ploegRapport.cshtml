@model IEnumerable<EqUiWebUi.Areas.Gadata.Models.AAOSR_PloegRaport_Result>

@Html.Grid(Model).Named("PloegRapport").Build(columns =>
{
    columns.Add(c => c.Location).Titled("Location").Filterable(true);
    columns.Add(c => c.logtext).Titled("Logtext").Filterable(true).MultiFilterable(true);
    columns.Add(c => c.Response_min_).Titled("RT").Filterable(true);
    columns.Add(c => c.Downtime_min_).Titled("DT").Filterable(true);
    columns.Add(c => c.Count).Titled("Count").Filterable(true);
    columns.Add(c => c.time).Titled("Time");
    columns.Add(c => c.Subgroup).Titled("Subgroup").Filterable(true).Css("hidden-sm hidden-xs");
    columns.Add(c => c.Logtype).Titled("Logtype").Filterable(true).Css("hidden-sm hidden-xs");
    columns.Add(c => c.LocationTree).Filterable(true).Css("hidden");
    columns.Add(c => c.Logcode).Css("hidden");
    columns.Add(c => c.refId).Css("hidden");
}).Sortable().Pageable(pager =>
{
    pager.RowsPerPage = 20;
}).Empty("No data found").Css("table-hover").RowCss(row => MyRowStyling.getRowStyleLogtype(row.Logtype))
