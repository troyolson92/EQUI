@model IEnumerable<EqUiWebUi.Areas.Gadata.Models.Supervisie>

@*set title*@
@{
    ViewBag.Title = "Supervisie";
}

<div id="SupervisieGridSpincontainer" style="position:relative">
    <div id="SupervisieGrid" class="mvc-grid"></div>
</div>

@*render popuover modal*@
<div id="MyModal" class="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-content">Loading....</div>
</div>

@section scripts{
    <!--script for supervisiegrid-->
    <script type="text/javascript">
    var SupervisieGridspinner = new Spinner();
    //render grid and subscrible to row clicked events
    $('#SupervisieGrid').mvcgrid({
        sourceUrl: '@Url.Action("_supervisie")', // Grid source url string
        requestType: 'get', // Ajax grid request type
        reload: true, // Grid reload indicator
        rowClicked: function (row, data, e) {
                var urlMoreInfo = '@Url.Action("_Moreinfo", "Table")?location=' + encodeURIComponent(data.Location)
                            + '&errornum=' + encodeURIComponent(data.Logcode)
                            + '&refid=' + encodeURIComponent(data.refId)
                            + '&logtype=' + encodeURIComponent(data.Logtype)
                            + '&logtext=' + encodeURIComponent(data.logtext)
                    //launch modal
                $('#MyModal').removeData('bs.modal');
                $('#MyModal').load(urlMoreInfo, function (result) {
                    $('#MyModal').modal({ show: true });
                });
        },
        reloadStarted: function () {
            SupervisieGridspinner.spin(document.getElementById('SupervisieGridSpincontainer'));
        },
        reloadEnded: function () {
            SupervisieGridspinner.stop();
        },
        reloadFailed: function (result) {
            SupervisieGridspinner.stop();
            $("#SupervisieGrid").html("Error while loading!!!");
        }
    });

        //on modal close
        $('#MyModal').on('hidden.bs.modal', function (e) {
            $('#MyModal').html('<div class="modal-content">no content</div>');
        });

        //full with screen
        $("#allcontent").removeClass("body-content");
        $("#allcontent").removeClass("container");
    </script>

    <!--Handle signal R reload-->
    <script src="~/Scripts/jquery.signalR-2.2.2.js"></script>
    <script src="~/signalr/js"></script>
    <script>
        $.connection.hub.start()
            .done(function () {
                console.log("Supervisie SignalR connected");
                $.connection.dataRefreshHub.server.joinGroup("Supervisie");
            })
            .fail(function () { console.log("Supervisie SignalR connect ERROR") });

        //trigger full window reload
        $.connection.dataRefreshHub.client.newData = function () {
            console.log("Supervisie reload");
            $('#Supervisie').mvcgrid({
                reload: true
            });
        }
    </script>

}