@model IEnumerable<EqUiWebUi.Areas.Maximo_ui.Models.Workorder>

@Html.Grid(Model).Named("Workorders").Build(columns =>
{
    columns.Add(c => c.WONUM).Titled("WONUM");
    columns.Add(c => c.WORKTYPE).Titled("WORKTYPE").Css("hidden-md hidden-sm hidden-xs");
    columns.Add(c => c.LOCATION).Titled("LOCATION").Css("hidden-xs").Filterable(true);
    columns.Add(c => c.STATUS).Titled("STATUS").Css("hidden-md hidden-sm hidden-xs").Filterable(true);
    columns.Add(c => c.STATUSDATE).Titled("STATUSDATE").Formatted("{0:dd-MM-yyyy hh:mm}").Css("hidden-md hidden-sm hidden-xs");
    columns.Add(c => c.DESCRIPTION).Titled("DESCRIPTION").Sortable(false).Filterable(true);


}).Sortable().Pageable(pager =>
{
    pager.RowsPerPage = 10;
}).Empty("No workorders found").Css("table-hover")


@*inform user that this is a realtime connection*@
@if (ViewBag.RealtimeConn)
{
    <div class="label">
        <div class="label label-danger">
            RT
        </div>
    </div>
}