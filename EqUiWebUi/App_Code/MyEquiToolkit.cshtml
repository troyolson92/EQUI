@*Error trent tool *@
@helper ErrorTrentTool(string location, string logtype, int errornum, string logtext)
    {
        string urlErrorstats = string.Format(
       "http://equi/EqUi_UtilManager/EqUi_UtilManger.application?Tool=ERRORstats&target={0}&Logtype={1}&Errornum={2}&logtext={3}",
       @Uri.EscapeDataString(location.ToString()),
       @Uri.EscapeDataString(logtype.ToString()),
       @Uri.EscapeDataString(errornum.ToString()),
       @Uri.EscapeDataString(logtext.ToString())
       );
        <a href="@urlErrorstats" class="btn-xs btn-success" data-toggle="tooltip" title="geeft de trend van de deze foutecode weer">Error trend &raquo;</a>
}


