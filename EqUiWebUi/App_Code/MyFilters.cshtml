                <option value="A LIJN 331">Frontstructure</option>
                <option value="A LIJN 334">Frontfloor</option>
                <option value="A LIJN 336">Rearfloor</option>
                <option value="A LIJN 338">Marriage</option>
            </optgroup>
            <optgroup label="CMA Sides">
                <option value="A LIJN 35">Sides (all)</option>
            </optgroup>
            <optgroup label="CMA Preassembly">
                <option value="GA4.0">GA4.0</option>
            </optgroup>
        </select>
}

