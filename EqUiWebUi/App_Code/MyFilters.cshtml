@*drop down control for filtering on 'locationtree'*@
@helper LocationDropdown(string id)
    {
        <select class="form-control input-sm" id="@id" name="Selecteer locatie">
            <optgroup label="CMA UB12 floorline">
                <option value="A LIJN 33">Floor (all)</option>
                <option value="A LIJN 331">Frontstructure</option>
                <option value="A LIJN 334">Frontfloor</option>
                <option value="A LIJN 336">Rearfloor</option>
                <option value="A LIJN 338">Marriage</option>
            </optgroup>
            <optgroup label="CMA Sides">
                <option value="A LIJN 35">Sides (all)</option>
            </optgroup>
            <optgroup label="CMA Preassembly">
                <option value="A LIJN 32">A LIJN 32%</option>
            </optgroup>
        </select>
}

