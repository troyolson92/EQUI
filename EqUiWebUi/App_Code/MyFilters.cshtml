@*helper to create info icon for tipmonitor*@
@helper TipMonitorIcon(string NoChangeDetected, double? RobotWear)
    {
string icon = "";
string linkText = "";
string tooltip = "";

//alert but wait to change until more than 1 mm wear 
if (NoChangeDetected == "X" && RobotWear < 1)
{
    icon = "glyphicon glyphicon-exclamation-sign";
    linkText = "Wait";
    tooltip = "No change deteced but wait to rechange electrode!";
}
//alert and can be changed
else if (NoChangeDetected == "X")
{
    icon = "glyphicon glyphicon-retweet";
    linkText = "Rechange";
    tooltip = "No change deteced you can now try to change the electrode again";
}
//all is good.
else
{
    icon = "glyphicon glyphicon-heart-empty";
    linkText = "";
    tooltip = "Everything is OK";
}

        <a href="" class="" data-toggle="tooltip" title="@tooltip">
            <i class="@icon"></i>
            <span>
                <strong>@linkText</strong>
            </span>
        </a>
}